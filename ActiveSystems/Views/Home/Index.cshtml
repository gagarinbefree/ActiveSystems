@model ActiveSystems.Models.ViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="parent">
    <div class="block">        
        <div class="links">
            <div id="linkUpdate" onclick="window.location.reload();">Update segment</div>
            <div id="linkSave">Save segment</div>
        </div>
        <div class="coords">
            <div id="coordFirst"></div>
            <div id="coordSecond"></div>
        </div>        

        <canvas id="cnvs" width="400" height="400"></canvas>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            var model = @(Html.Raw(Json.Serialize(Model)));

            var application = new app(model);
        });
    </script>
}